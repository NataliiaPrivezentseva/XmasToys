<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.asterisk.xmastoys">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppThemeBar">

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".LoginChoiceActivity"
            android:label="@string/login_choice">
        </activity>

        <activity
            android:name=".EmailRegistrationActivity"
            android:label="@string/sign_in_with_email">
        </activity>

        <activity
            android:name=".EmailLoginActivity"
            android:label="@string/login">
        </activity>

        <activity
            android:name=".OneToyActivity">
        </activity>

        <activity
            android:name=".AddToyActivity"
            android:label="@string/add_toy">

        </activity>
    </application>

</manifest>

