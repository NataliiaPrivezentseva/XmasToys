<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/picture_image_view"
        android:layout_width="@dimen/gridView_cellWidth"
        android:layout_height="@dimen/gridView_cellHeight"
        android:layout_marginTop="@dimen/activity_vertical_big_margin"
        android:scaleType="centerCrop"
        android:layout_alignParentTop="true"
        tools:ignore="contentDescription"
        android:background="@color/colorPrimary"
        />

    <TextView
        android:id="@+id/toy_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/picture_image_view"
        tools:text="Name of toy"
        android:padding="@dimen/cellText_padding"
        android:textColor="@color/colorPrimaryText"
        android:textSize="@dimen/cellText_textSize" />

    <TextView
        android:id="@+id/toy_year_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/picture_image_view"
        android:layout_alignEnd="@id/picture_image_view"
        tools:text="2018/2019"

        android:padding="@dimen/cellText_padding"
        android:textColor="@color/colorTextIcons"
        android:textSize="@dimen/cellText_textSize"
        android:background="@color/colorAccent"/>
</RelativeLayout>